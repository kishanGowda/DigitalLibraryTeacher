<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:cardCornerRadius="5dp"
    android:elevation="20dp"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView_icon"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/sbj_chemistry" />

        <TextView
            android:id="@+id/topic_name_lec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="48dp"
            android:text="Organic Chemistry"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/imageView_icon"
            app:layout_constraintTop_toTopOf="@+id/imageView_icon" />

        <TextView
            android:id="@+id/chapter_lec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reaction Intermediates"
            android:textColor="#636363"
            android:textSize="12dp"
            android:layout_marginVertical="6dp"
            app:layout_constraintStart_toStartOf="@+id/topic_name_lec"
            app:layout_constraintTop_toBottomOf="@+id/topic_name_lec" />

        <TextView
            android:id="@+id/subject_lec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chemistry"
            android:layout_marginVertical="6dp"
            android:textColor="#AEAEAE"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/chapter_lec"
            app:layout_constraintTop_toBottomOf="@+id/chapter_lec" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>